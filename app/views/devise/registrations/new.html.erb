<div id="Sign_up">
  <h2>Sign up:</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <br />
      <%= f.email_field :email, :placeholder => "Email", autofocus: true, :class => "form-control input-lg" %>
    </div>

    <div class="field">
      <br />
      <%= f.password_field :password, :placeholder => "Password", autocomplete: "off", :class => "form-control input-lg" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>

    <div class="field">
      <br />
      <%= f.password_field :password_confirmation, :placeholder => :password_confirmation, autocomplete: "off", :class => "form-control input-lg" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", :class => "btn btn-primary btn-lg" %>
    </div>
  <% end %>
  <br>
</div>