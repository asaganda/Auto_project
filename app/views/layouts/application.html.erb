<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <!-- if page == whatever -->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if user_signed_in? %>
    <div id="paper-back">
      <nav>
        <div class="close"></div>
          <ul>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Summary", summary_page_path %></li>
            <li><%= link_to "Add A New Car", car_build_path %></li>
            <li><%= link_to "Add A New Dealer", dealer_build_path %></li>
            <li><%= link_to "LOGOUT", destroy_user_session_path, method: :delete %></li>
          </ul><!-- un-ordered list -->
      </nav><!-- nav section -->
    </div><!-- paper-back div -->
    <div id="paper-window">
      <div id="paper-front">
        <div class="hamburger"><span></span></div>
          <div id="container">
            <section>
              <%= yield %>
            </section>
            <section></section>
            <section></section>
            <section></section>
          </div><!-- container div -->
      </div><!-- paper-front div -->
    </div><!-- paper-window div -->

  <% end %>

  <% if !user_signed_in? %>
    <nav>
      <ul>
        <li><a href="http://localhost:3000/users/sign_up" title="">Sign Up!</a></li>
        <li><a href="http://localhost:3000/users/sign_in" title="">Sign In!</a></li>
      </ul>
    </nav>
  <% end %>


  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

</body>
</html>
