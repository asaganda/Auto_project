<!DOCTYPE html>
<html>
<head>
  <title>AutoProject</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if user_signed_in? %>
    <%= link_to "LOGOUT", destroy_user_session_path, method: :delete %>
    <nav>
      <ul>
        <li><%= link_to "Home", summary_page_path %></li>
        <li><%= link_to "Add A New Car", car_build_path %></li>
        <li><%= link_to "Add A New Dealer/Contact", dealer_build_path %></li>
      </ul>
    </nav>
  <% end %>

  <% if !user_signed_in? %>
    <nav>
      <ul>
        <li><a href="http://localhost:3000/users/sign_up" title="">Sign Up!</a></li>
        <li><a href="http://localhost:3000/users/sign_in" title="">Sign In!</a></li>
      </ul>
    </nav>
  <% end %>


  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= yield %>

</body>
</html>
